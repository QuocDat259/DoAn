﻿@model IEnumerable<NhaKhoa.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<h2 class="text-center">Quản lí tài khoản bệnh nhân</h2>

<div class="text-right mb-3">
    @Html.ActionLink("Tạo tài khoản", "Create", null, new { @class = "btn btn-primary" })
</div>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Email
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Căn cước
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @if (item.GioiTinh == true)
                {
                    <span class="text-success">Nam</span>
                }
                else
                {
                    <span class="text-danger">Nữ</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CCCD)
            </td>

            <td>
                <div class="btn-group" role="group">
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                </div>
            </td>
        </tr>
    }

</table>